{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hardware</h1>

    <table>
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ hardware.uuid }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ hardware.login }}</td>
            </tr>
            <tr>
                <th>Vpn_address</th>
                <td>{{ hardware.vpnaddress }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ hardware.password }}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{% if hardware.modified %}{{ hardware.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{% if hardware.isactive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hardware_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hardware_edit', { 'id': hardware.uuid }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
