{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>Client</h1>
            <table class="table table-stripped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ client.name }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ client.address }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ client.phone }}</td>
                </tr>
                <tr>
                    <th>Modified</th>
                    <td>{% if client.modified %}{{ client.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            {{ form_start(delete_form) }}
            <div class="btn-group" role="group">
                <a href="{{ path('client_index') }}" class="btn btn-warning"><i class="fa fa-arrow-left"></i> Back to the list</a>
                <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-success"><i class="fa fa-edit"></i> Edit</a>
                <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> Delete</button>
            </div>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}