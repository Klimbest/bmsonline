{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>Database</h1>
            <table class="table table-stripped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ database.id }}</td>
                </tr>
                <tr>
                    <th>Hostname</th>
                    <td>{{ database.hostname }}</td>
                </tr>
                <tr>
                    <th>Host_ip</th>
                    <td>{{ database.hostip }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ database.name }}</td>
                </tr>
                <tr>
                    <th>Login</th>
                    <td>{{ database.login }}</td>
                </tr>
                <tr>
                    <th>Modified</th>
                    <td>{% if database.modified %}{{ database.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            {{ form_start(delete_form) }}
            <div class="btn-group" role="group">
                <a href="{{ path('database_index') }}" class="btn btn-warning"><i class="fa fa-arrow-left"></i> Back to the list</a>
                <a href="{{ path('database_edit', { 'id': database.id }) }}" class="btn btn-success"><i class="fa fa-edit"></i> Edit</a>
                <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> Delete</button>
            </div>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
